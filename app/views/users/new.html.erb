<%= provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="span6 offset3">
  	<div class="well">
  		<%= form_for(@user) do |f| %>
  			<%= render 'fields', f: f %>
  			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
	    <% end %>
    Have an account? <%= link_to "Sign in", '#' %>
  	</div>
  </div>
</div>